{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-new": "off",
        "no-console": "off",
        "import/prefer-default-export": "off",
        "no-useless-constructor": "off",
        "@typescript-eslint/naming-convention": [ 
          "error", 
          { 
            "selector": "interface", 
            "format": ["PascalCase"], 
            "custom": { 
              "regex": "^I[A-Z]", 
              "match": true 
            } 
          } 
        ]
    }
}
